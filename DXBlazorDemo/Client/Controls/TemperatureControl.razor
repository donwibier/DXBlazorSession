@using DXBlazorDemo.Shared

<table class="table">
	<thead>
		<tr>
			<th>Date</th>
			<th>Temp. (@TemperatureTitle)</th>
			<th>Summary</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var forecast in Forecasts)
		{
			<tr>
				<td>@forecast.Date.ToShortDateString()</td>
				<td>@PrintTemp(forecast.TemperatureC)</td>
				<td>@forecast.Summary</td>
			</tr>
		}
	</tbody>
</table>

@code {
	[Parameter]
	public IWeatherForecast[] Forecasts { get; set; }
	[Parameter]
	public string TemperatureTitle { get; set; }
	[Parameter]
	public Func<int, int> PrintTemp { get; set; }
}
