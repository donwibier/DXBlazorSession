@page "/mvvm"

@inject IFetchDataViewModel  viewModel

<h1>Weather forecast</h1>
@if (viewModel.Forecasts == null)
{
	<p><em>Loading...</em></p>
}
else
{
	<button class="btn btn-primary" 
			@onclick=@viewModel.ToggleScaleAction>Display @viewModel.OtherTempScale</button>

	<table class="table">
		<thead>
			<tr>
				<th>Date</th>
				<th>Temp. (@viewModel.TempTitle)</th>
				<th>Summary</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var forecast in viewModel.Forecasts)
			{
				<tr>
					<td>@forecast.Date.ToShortDateString()</td>
					<td>@viewModel.PrintTemperature(forecast.TemperatureC)</td>
					<td>@forecast.Summary</td>
				</tr>
			}
		</tbody>
	</table>
}

@code {

	protected override async Task OnInitializedAsync()
	{
		await viewModel.RetrieveDataAsync();
	}

}
